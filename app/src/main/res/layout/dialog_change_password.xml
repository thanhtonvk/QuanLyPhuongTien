<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_lock" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Đổi mật khẩu"
        android:textColor="#1E88E5"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_noti_old"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="Mật khẩu cũ"
        android:textColor="#1E88E5" />

    <EditText
        android:id="@+id/edt_oldpassword"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/border_textview"
        android:drawableRight="@drawable/ic_code"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_noti_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="Mật khẩu mới"
        android:textColor="#1E88E5" />

    <EditText
        android:id="@+id/edt_newpassword"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/border_textview"
        android:drawableRight="@drawable/ic_lock"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_noti_rep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="Nhập lại mật khẩu"
        android:textColor="#1E88E5" />

    <EditText
        android:id="@+id/edt_replypassword"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/border_textview"
        android:drawableRight="@drawable/ic_lock"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_update"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/border_textview"
        android:backgroundTint="#039BE5"
        android:text="Đổi mật khẩu"
        android:textColor="@color/white" />
</LinearLayout>